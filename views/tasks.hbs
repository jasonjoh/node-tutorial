<h2>Tasks</h2>
<table class="table">
  <thead class="thead-light">
    <th scope="col">Owner</th>
    <th scope="col">Subject</th>
    <th scope="col">Status</th>
  </thead>
  <tbody>
    {{#each tasks}}
      <tr >
        <td title="{{this.owner}}">{{this.owner}}</td>
        <td>{{this.subject}}</td>
        <td>{{this.status}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>